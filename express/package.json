    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.17.1",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.6.0",
    "pg": "^8.5.0",
    "reflect-metadata": "^0.1.13",
